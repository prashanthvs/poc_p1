# Maverick RAG Configuration

# LLM Provider Configuration
LLM_PROVIDER=together
LLAMA_MODEL=meta-llama/Meta-Llama-3.1-8B-Instruct
TOGETHER_API_KEY=your_together_api_key_here
TOGETHER_BASE_URL=https://api.together.xyz/v1

# Alternative LLM Providers
# OPENAI_API_KEY=your_openai_api_key_here
# OLLAMA_BASE_URL=http://localhost:11434/v1
# OLLAMA_API_KEY=ollama

# Embedding Configuration
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# Data Configuration
DOCS_DIR=data/docs
INDEX_DIR=data/index/faiss

# Databricks Configuration
USE_DATABRICKS=false
DATABRICKS_WORKSPACE_URL=your_workspace_url.databricks.com
DATABRICKS_ACCESS_TOKEN=your_databricks_access_token
DATABRICKS_CATALOG=main
DATABRICKS_SCHEMA=default
DATABRICKS_VOLUME=source_data
DATABRICKS_VOLUME_PATH=/Volumes/main/default/source_data
DATABRICKS_VECTOR_SEARCH_ENDPOINT=your_vector_search_endpoint
DATABRICKS_MODEL_SERVING_ENDPOINT=your_model_serving_endpoint

# Application Configuration
GRADIO_SERVER_NAME=0.0.0.0
GRADIO_SERVER_PORT=7860
